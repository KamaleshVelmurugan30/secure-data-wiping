# Database
DATABASE_URL="postgresql://trustwipe:trustwipe_password@localhost:5432/trustwipe"

# Redis
REDIS_URL="redis://localhost:6379"

# JWT Secret (change this in production!)
JWT_SECRET="your-super-secret-jwt-key-change-in-production"

# Server Configuration
NODE_ENV="development"
PORT="3001"
LOG_LEVEL="info"
FRONTEND_URL="http://localhost:5173"

# File Upload
MAX_FILE_SIZE="50mb"
UPLOAD_DIR="./uploads"

# Blockchain Configuration (optional - uses mock if not provided)
BLOCKCHAIN_RPC_URL=""
CONTRACT_ADDRESS=""
PRIVATE_KEY=""

# Email Configuration (for delivery service)
SMTP_HOST=""
SMTP_PORT="587"
SMTP_USER=""
SMTP_PASS=""

# Security
CSRF_SECRET="your-csrf-secret-key"
RATE_LIMIT_WINDOW_MS="900000"  # 15 minutes
RATE_LIMIT_MAX_REQUESTS="100"

# CA Bundle for PKCS#7 verification
CA_BUNDLE_PATH="./certs/ca-bundle.pem"